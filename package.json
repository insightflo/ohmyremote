{
  "name": "ohmyremote",
  "private": true,
  "version": "0.0.1",
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "test": "pnpm -r --workspace-concurrency=1 test",
    "typecheck": "pnpm -r --workspace-concurrency=1 typecheck",
    "start": "pnpm run start:server & pnpm run start:bot & wait",
    "start:server": "pnpm --filter @ohmyremote/server start",
    "start:bot": "pnpm --filter @ohmyremote/bot start"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.2"
  }
}
